@model IEnumerable<MyAspCoreProject.Models.Serial>

@{
    ViewData["Title"] = "Index";
}

<h2>List of Serials</h2>

<p>
    <a asp-action="Create">Browse</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SerialName)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialTime)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SerialName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerialTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SerialId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SerialId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SerialId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>